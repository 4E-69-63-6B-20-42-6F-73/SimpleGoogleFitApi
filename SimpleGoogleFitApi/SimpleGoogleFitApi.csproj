<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Nick Bos</Authors>
    <Company />
    <Description>A simple to use package to get data from Google Fit</Description>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/4E-69-63-6B-20-42-6F-73/SimpleGoogleFitApi.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Fit</PackageTags>
    <PackageReleaseNotes>First version!</PackageReleaseNotes>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Google.Apis.Fitness.v1" Version="1.58.0.2454" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
    <None Include="..\readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
